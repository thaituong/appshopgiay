<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_AnhSP"
        android:layout_width="127dp"
        android:layout_height="136dp"
        android:src="@mipmap/giay1"
        android:layout_marginRight="5dp"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_TenSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:text="Air Jordan 1 Mid SEEEEEEEEEEEEEEE"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_MauSacSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Màu sắc : Xanh"
                android:textColor="#000000"
                android:textSize="12sp"></TextView>

            <TextView
                android:id="@+id/tv_KichCoSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Kích cỡ : 40"
                android:textColor="#000000"
                android:textSize="12sp"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_GiaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="685000"
                    android:textColor="#000000"
                    android:textSize="12sp"></TextView>

                <LinearLayout
                    android:layout_width="83dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/bttangsl"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btTangSP"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:background="@drawable/bttronsize"
                        android:focusable="false"
                        android:text="+"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"></Button>

                    <TextView
                        android:id="@+id/tvSLSanPham"
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/btGiamSP"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:background="@drawable/bttronsize"
                        android:focusable="false"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>