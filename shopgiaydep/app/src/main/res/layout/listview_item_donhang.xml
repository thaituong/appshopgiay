<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:id="@+id/tvIDDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn hàng : 1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            >
        </TextView>


    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng Thái: Đã hủy"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <TextView
        android:id="@+id/tvNgayDat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày đặt: 20/5/2023"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHoTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên: Nguyễn Thái Tường"
            android:textColor="#000000"></TextView>

        <TextView
            android:id="@+id/tvSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT: 0976464256"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: Thủ Dức, HCM"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <TextView
        android:id="@+id/tvPTTT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PTTT: Thanh toán khi nhận hàng"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <Button
        android:id="@+id/btHuyDon"
        android:focusable="false"
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Hủy Đơn"
        android:textColor="#000000"></Button>
</LinearLayout>