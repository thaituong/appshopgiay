<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SanPham"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/headerregit">

        <ImageButton
            android:id="@+id/SanPhamBack"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginLeft="28.59px"
            android:layout_marginTop="40px"
            android:background="#FFFFFF"
            android:src="@drawable/vector">

        </ImageButton>

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:text="SẢN PHẨM"
            android:textAlignment="center"
            android:textColor="#3C3D42"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_AnhSP"
            android:layout_width="156dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:src="@mipmap/giay1"></ImageView>

        <TextView
            android:id="@+id/tv_TenSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="Air Jordan 1 Mid SE"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <TextView
                android:id="@+id/tv_GiaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="685000"
                android:textColor="#FF0C0C"
                android:textSize="25sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_SoLuongBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Đã bán 999"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="#D9D9D9"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu sắc"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"></TextView>

                <GridView
                    android:id="@+id/gvItemMauSac"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:numColumns="8"
                    android:stretchMode="columnWidth"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <GridView
                    android:id="@+id/gvItemSize"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:numColumns="8"
                    android:stretchMode="columnWidth"
                    android:padding="5dp" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginRight="15dp"></TextView>
            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:background="@drawable/bttangsl">
                <Button
                    android:id="@+id/btTangSP"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:text="+"
                    android:textSize="12sp"
                    android:background="@drawable/bttronsize"
                    android:textStyle="bold"></Button>
                <TextView
                    android:id="@+id/tvSLSanPham"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>
                <Button
                    android:id="@+id/btGiamSP"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:text="-"
                    android:textSize="12sp"
                    android:background="@drawable/bttronsize"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginRight="15dp"></TextView>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMoTa"
                    android:layout_width="316dp"
                    android:layout_height="97dp"
                    android:gravity="left|center"
                    android:lineSpacingExtra="3sp"
                    android:text="Lorem ipsum dolor sit amet, sed do consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    android:textColor="#000000"
                    android:textSize="16sp"></TextView>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6,850,000 Đ"
            android:textColor="#FF0C0C"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"></TextView>

        <Button
            android:id="@+id/btThenVaoGioHang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btthemvaogiohang"
            android:drawableStart="@drawable/shoppingcart"
            android:paddingLeft="8dp"
            android:text="Thêm vào giỏ hàng"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_gravity="center"></Button>

        <Button
            android:id="@+id/btMuaNgay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btthemvaogiohang"
            android:text="Mua ngay"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"></Button>
    </LinearLayout>
</LinearLayout>