<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SanPham">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/headerregit">

        <ImageButton
            android:id="@+id/SanPhamBack"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginLeft="28.59px"
            android:layout_marginTop="40px"
            android:background="#FFFFFF"
            android:src="@drawable/vector">

        </ImageButton>

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:text="SẢN PHẨM"
            android:textAlignment="center"
            android:textColor="#3C3D42"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/anhsp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Air Jordan 1 Mid SE"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="685,000 đ"
            android:textColor="#FF0C0C"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#D9D9D9"
            android:text="Đã bán 999"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="39"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="40"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="41"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bttronsize"
                    android:text="42"></Button>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu sắc"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="Xanh"
                    android:textSize="9sp"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="Đen"
                    android:textSize="9sp"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bttronsize"
                    android:text="Trắng"
                    android:textSize="9sp"></Button>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bttronsize"
                    android:text="Đỏ"
                    android:textSize="9sp"></Button>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Số lượng"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="22dp"
            android:background="@drawable/bttangsl"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:background="@drawable/bttronsize"
                android:text="+"
                android:textSize="12sp"
                android:textStyle="bold"></Button>

            <TextView
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:text="1"
                android:textAlignment="center"
                android:textStyle="bold"></TextView>

            <Button
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:background="@drawable/bttronsize"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Mô tả"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="316dp"
            android:layout_height="123dp"
            android:gravity="left|center"
            android:lineSpacingExtra="3sp"
            android:text="Lorem ipsum dolor sit amet, sed do consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, sed do eiusmod tempor incididunt"
            android:textColor="#000000"
            android:textSize="16sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="685,000 đ"
            android:textColor="#FF0C0C"
            android:textSize="22sp"
            android:textStyle="bold"></TextView>

        <Button
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btthemvaogiohang"
            android:drawableStart="@drawable/shoppingcart"
            android:paddingLeft="8dp"
            android:text="Thêm vào giỏ hàng"
            android:textSize="13sp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btthemvaogiohang"
            android:text="Mua ngay"
            android:textSize="13dp"
            android:textStyle="bold"></Button>
    </LinearLayout>
</LinearLayout>